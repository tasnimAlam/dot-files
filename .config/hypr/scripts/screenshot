#!/usr/bin/env fish

# Ask for file type
set type (echo -e "Full screen \nArea selection" | bemenu -i -p "Screenshot type: ")

# Handle file type selection
switch $type
    case "Full screen"
        hyprshot -m window
        notify-send "Screenshot saved at ~/Desktop"

    case "Area selection"
        hyprshot -m region --raw | swappy -f -
        notify-send "Screenshot saved at ~/Desktop"
  
    case '*'
        notify-send "No screenshot type selected"
end
